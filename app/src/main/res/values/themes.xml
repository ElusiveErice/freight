<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.FreightBook" parent="XUITheme.Phone">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleSplashImage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/road</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CustomAnim">
        <item name="android:windowEnterAnimation">@anim/custom_push_down_in</item>
        <item name="android:windowExitAnimation">@anim/custom_push_up_out</item>
    </style>
</resources>